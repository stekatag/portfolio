---
import BaseLayout from "../layouts/BaseLayout.astro";
import Link from "../components/ui/link.astro";
import Icon from "../components/ui/Icon/Icon.astro";
import Hero from "../components/Hero.astro";
import RepoList from "../components/RepoList/RepoList";
---

<BaseLayout
  title="Projects | Stefan Gogov"
  description="Learn about Stefan Gogov's most recent projects"
>
  <div class="stack gap-20">
    <header class="wrapper hero">
      <Hero
        align="center"
        title="My projects"
        tagline="Showcase of my most recent projects"
      />
      <img
        alt="illustration of a men coding web projects"
        src="/assets/illustrations/projects.svg"
      />
    </header>

    <main class="wrapper stack gap-10">
      <RepoList client:load />

      <div class="links">
        <Link
          class="link"
          href="https://github.com/stekatag"
          style="rounded"
          external
        >
          <Icon icon="code" size="1.33em" /> See All Projects
        </Link>
        <Link class="link" href="/contact" style="roundedInverted">
          <Icon icon="readCV" size="1.33em" /> See Resume
        </Link>
      </div>
    </main>
  </div>
</BaseLayout>

<style lang="scss">
  .hero {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding-inline: 2.5rem;
    gap: 1.5rem;

    img {
      width: 100%;
      max-width: 22rem;
    }
  }

  .links {
    display: flex;
    flex-direction: column;
    gap: 1rem;

    .link {
      width: 100%;
      justify-content: center;
    }
  }

  @media (min-width: 50em) {
    .hero {
      flex-direction: row;
      gap: 6rem;
    }

    .links {
      margin-top: 0.5rem;
      flex-direction: row;
      justify-content: center;
      gap: 0.8rem;

      .link {
        width: auto;
      }
    }
  }
</style>
